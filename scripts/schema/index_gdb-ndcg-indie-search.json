        "type": "keyword"
      },
      "category_boost_version": {
        "type": "keyword"
      },
      "ndcg": {
        "properties": {
          "total": {
            "properties": {
              "sum": { "type": "float" },
              "count": { "type": "integer" },
              "avg": { "type": "float" }
            }
          },
          "game": {
            "properties": {
              "sum": { "type": "float" },
              "count": { "type": "integer" },
              "avg": { "type": "float" }
            }
          },
          "tag": {
            "properties": {
              "sum": { "type": "float" },
              "count": { "type": "integer" },
              "avg": { "type": "float" }
            }
          },
          "developer": {
            "properties": {
              "sum": { "type": "float" },
              "count": { "type": "integer" },
              "avg": { "type": "float" }
            }
          },
          "genre": {
            "properties": {
              "sum": { "type": "float" },
              "count": { "type": "integer" },
              "avg": { "type": "float" }
            }
          },
          "topic": {
            "properties": {
              "sum": { "type": "float" },
              "count": { "type": "integer" },
              "avg": { "type": "float" }
            }
          },
          "general": {
            "properties": {
              "sum": { "type": "float" },
              "count": { "type": "integer" },
              "avg": { "type": "float" }
            }
          }
        }
      },
      "features": {
        "type": "nested",
        "properties": {
          "field_name": { "type": "keyword" },
          "feature_name": { "type": "keyword" },
          "factor": { "type": "float" },
          "weight": { "type": "float" },
          "missing": { "type": "float" },
          "remote_path": { "type": "keyword" },
          "local_path": { "type": "keyword" }
        }
      }
