      "type": {
        "type": "keyword"
      },
      "index_name": {
        "type": "text"
      },
      "timestamp": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss"
      },
      "description": {
        "type": "text"
      },
      "ground_truth_version": {
        "type": "keyword"
      },
