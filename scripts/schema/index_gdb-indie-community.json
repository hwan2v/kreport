{
  "settings": {
    "max_ngram_diff": 1,
    "analysis": {
      "analyzer": {
        "gdb_ngram_analyzer": {
          "tokenizer": "gdb_ngram_tokenizer",
          "filter": [
            "lowercase"
          ]
        },
        "gdb_edge_ngram_analyzer": {
          "tokenizer": "gdb_edge_ngram_tokenizer",
          "filter": [
            "lowercase"
          ]
        },
        "gdb_content_nori_analyzer": {
          "tokenizer": "nori_tokenizer",
          "char_filter": [
            "html_strip"
          ],
          "filter": [
            "lowercase",
            "nori_part_of_speech"
          ]
        },
        "gdb_title_nori_analyzer": {
          "tokenizer": "nori_mixed",
          "filter": [
            "lowercase",
            "nori_part_of_speech",
            "alphanum_filter"
          ]
        }
      },
      "tokenizer": {
        "gdb_edge_ngram_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 10
        },
        "gdb_ngram_tokenizer": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 10
        },
        "nori_mixed": {
          "type": "nori_tokenizer",
          "decompound_mode": "mixed"
        },
        "nori_none": {
          "type": "nori_tokenizer",
          "decompound_mode": "none"
        }
      },
      "filter": {
        "alphanum_filter": {
          "type": "word_delimiter",
          "split_on_numerics": true
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "title": {
        "type": "text",
        "analyzer": "gdb_title_nori_analyzer",
        "fields": {
          "edge": {
            "type": "text",
            "analyzer": "gdb_edge_ngram_analyzer"
          },
          "ngram": {
            "type": "text",
            "analyzer": "gdb_ngram_analyzer"
          }
        }
      },
      "content": {
        "type": "text",
        "analyzer": "gdb_content_nori_analyzer"
      },
      "community_no": {
        "type": "integer"
      },
      "card_no": {
        "type": "integer"
      },
      "member_no": {
        "type": "integer"
      },
      "country_cd": {
        "type": "keyword"
      },
      "write_type": {
        "type": "keyword"
      },
      "card_type": {
        "type": "keyword"
      },
      "headline_no": {
        "type": "integer"
      },
      "like_cnt": {
        "type": "integer"
      },
      "share_cnt": {
        "type": "integer"
      },
      "reply_cnt": {
        "type": "integer"
      },
      "claim_cnt": {
        "type": "integer"
      },
      "dislike_cnt": {
        "type": "integer"
      },
      "channel_no": {
        "type": "integer"
      },
      "cafe_no": {
        "type": "integer"
      },
      "status": {
        "type": "keyword"
      },
      "client_lang_cd": {
        "type": "keyword"
      },
      "site_lang_cd": {
        "type": "keyword"
      },
      "channel_tag" : {
        "type" : "text"
      },
      "menu_tag" : {
