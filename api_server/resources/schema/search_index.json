{
    "settings": {
      "number_of_shards": 1,
      "refresh_interval": "1s",
      "index.knn": true,
      "analysis": {
        "analyzer": {
          "ko_nori": {
            "type": "custom",
            "tokenizer": "nori_tokenizer",
            "filter": ["lowercase", "nori_readingform", "nori_part_of_speech"]
          },
          "search_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "lowercase"
            ]
          }
        },
        "normalizer": {
          "lower_norm": {
            "type": "custom",
            "filter": ["lowercase", "asciifolding"]
          }
        }
      }
    },
    "mappings": {
      "dynamic": false,
      "properties": {
        "source_id": {
          "type": "keyword",
          "index": false
        },
        "source_path": {
          "type": "text",
          "index": false
        },
        "file_type": {
          "type": "keyword",
          "index": false
        },
        "seq": {
          "type": "integer"
        },
        "title": {
          "type": "text",
          "analyzer": "ko_nori",
          "fields": {
            "keyword": { "type": "keyword", "ignore_above": 512 }
          }
        },
        "title_embedding": {
          "type": "knn_vector",
          "dimension": 384,
          "method": {
              "name": "hnsw",
              "space_type": "cosinesimil",
              "engine": "nmslib"
          }
        },
        "body": {
          "type": "text",
          "analyzer": "ko_nori",
          "search_analyzer": "search_analyzer"
        },
        "body_embedding": {
          "type": "knn_vector",
          "dimension": 384,
          "method": {
            "name": "hnsw",
            "space_type": "cosinesimil",
            "engine": "nmslib"
          }
        },
        "summary": {
          "type": "text",
          "analyzer": "ko_nori"
        },
        "infobox": {
          "type": "text",
          "analyzer": "ko_nori"
        },
        "paragraph": {
          "type": "text",
          "analyzer": "ko_nori"
        },
        "question": {
          "type": "text",
          "analyzer": "ko_nori"
        },
        "answer": {
          "type": "text",
          "analyzer": "ko_nori"
        },
        "created_date": {
          "type": "date",
          "format": "strict_date_optional_time||epoch_millis"
        },
        "updated_date": {
          "type": "date",
          "format": "strict_date_optional_time||epoch_millis"
        },
        "author": {
          "type": "keyword",
          "normalizer": "lower_norm",
          "index": false
        },
        "published": {
          "type": "boolean",
          "index": false
        }
      }
    }
  }
  